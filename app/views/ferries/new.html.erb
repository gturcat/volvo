<div class = "wrapper">
  <ul class="list-inline tabs-underlined">
  <li>
    <%= link_to "Preparation Livraisons", deliveries_path, class: "tab-underlined active " %>
  </li>
  <li>
    <%= link_to "Archives", archive_deliveries_path, class: "tab-underlined " %>
  </li>
</ul>
</div>

<div class="form-container">
<%= simple_form_for [@bus, @ferry] do |f| %>
  <%= f.input :date_convoyage, as: :date, html5: true %>
 <div class="row">
      <div class="col-sm-6 col-xs-12">
  <%= f.input :depart, label: "Lieu de départ" %>
      </div>
      <div class="col-sm-6 col-xs-12">
  <%= f.input :arrivee, label: "lieu d'arrivée" %>
      </div>
  </div>
  <%= f.input :note, as: :text, label: "Note (nom du convoyeur)" %>
  <%= f.submit "Convoyer", class: "btn btn-primary" %>
<% end %>
</div>
