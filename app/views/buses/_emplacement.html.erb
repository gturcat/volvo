<%= simple_form_for @bus, method: :get do |f| %>
  <%= f.simple_fields_for :ferries do |ferries_form| %>
    <%= ferries_form.date_field :date_convoyage %>
    <%= ferries_form.text_field :sens %>
    <%= ferries_form.text_field :depart %>
    <%= ferries_form.text_field :arrivee %>
    <%= ferries_form.text_field :numero_bdc %>
  <% end %>
  <button type="submit" class="btn btn-primary">
  <i class="fas fa-plus-circle"></i></button>
<% end %>

<% @bus.ferries.each  do | ferry| %>
  <%= ferry.date_convoyage %>
  <%= ferry.sens %>
  <%= ferry.depart %>
  <%= ferry.arrivee %>
  <%= ferry.numero_bdc %>
<% end %>
