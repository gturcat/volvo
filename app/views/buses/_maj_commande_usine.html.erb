<%= simple_form_for @factory_order do |f| %>
<div class="tab">
  <div class="panel panel-default">
    <!-- Default panel contents
    <div class="panel-heading">Bus en stock</div>-->
    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Envoi OF</th>
          <th>date limite modif. Config.</th>
          <th>reception OC</th>
          <th>Dispo FR demandée</th>
          <th>CDD</th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <td><%= f.input :envoiOF, label: false %></td>
          <td><%= f.input :date_limit_modif_config, as: :date, html5: true, label: false %></td>
          <td><%= f.input:reception_oc, label: false %></td>
          <td><%= f.input :dispo_fr, as: :boolean, label: false %></td>
          <td><%= f.input :CDD, as: :date, html5: true, label: false %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="tab">
  <div class="panel panel-default">
    <!-- Default panel contents
    <div class="panel-heading">Bus en stock</div>-->
    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Lieu départ Usine</th>
          <th>Date Départ Usine</th>
          <th>lieu Arrivée chez Partenaire Volvo</th>
          <th>Date Arrivée chez partenaire Volvo</th>
          <th>Partenaire Volvo Prevenu</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.input :lieu_depart_usine, label: false %></td>
          <td><%= f.input :date_depart_usine, as: :date, html5: true, label: false %></td>
          <td><%= f.input :lieu_arrivee_partenaire_volvo, label: false %></td>
          <td><%= f.input :date_arrivee_partenaire_volvo,as: :date, html5: true, label: false %></td>
          <td><%= f.input :partenaire_prevenu, as: :boolean, label: false %></td>
        </tr>
      </tbody>
    </table>
    <button type="submit" class="btn btn-primary">
            <i class="far fa-save"></i>
            </button>
            <% end %>
  </div>
</div>
