<div class="container">
  <%= link_to new_bus_path() do %>
  ajouter un bus en stock Volvo Bus
  <% end %>
  <h2>Bus en stock ou en commande</h2>
  <div class="tab">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"></div>
      <!-- Table -->
      <table class="table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Order Book</th>
            <th>Couleur Exterieure</th>
            <th>Client</th>
            <th>Statut 1</th>
            <th>Statut 2</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @buses.each  do | bus| %>
          <tr>
            <td><%= bus.description[:name] %></td>
            <td><% if bus.orders.where("orders.statut = true").take.present? %>
              <%= bus.orders.where("orders.statut = true").take.lines.last.order_book.name if bus.orders.where("orders.statut = true").take.lines.last.order_book.present?  %>
              <% end %>
            </td>
            <td><%= bus.orders.where("orders.statut = true").take.lines.last.couleur_ext_vehicule if bus.orders.where("orders.statut = true").take.present? %></td>
            <td> <%= bus.orders.where("orders.statut = true").take.client if bus.orders.where("orders.statut = true").take.present? %></td>
            <td><%= bus.statut1 %></td>
            <td><%= bus.statut2 %></td>
            <td><%= link_to bus_path(bus[:id]), class: "btn btn-warning" do %>
              <i class="far fa-edit"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
