      <div class="panel panel-default">
        <!-- Default panel contents
        <div class="panel-heading">Bus en stock</div>-->
        <!-- Table -->
        <table class="table">
          <thead>
            <tr>
              <th>Status 1</th>
              <th>Status 2</th>
              <th>Description</th>
              <th>Type</th>
              <th>CB / CH</th>
              <th>7 / 9</th>
              <th>Action</th>
