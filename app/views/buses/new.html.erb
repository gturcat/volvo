<% if !@order.present? %>
<div class = "wrapper">
  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "Bus en stock", buses_path, class: "tab-underlined" %>
    </li>
    <li>
      <%= link_to "Ajouter un bus en stock", new_bus_path(), class: "tab-underlined active" %>
    </li>
    <li>
      <%= link_to "Bus chez le client", archive_buses_path, class: "tab-underlined " %>
    </li>
  </ul>
</div>

<div class="form-container">
  <%= simple_form_for @bus do |f| %>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= f.input :statut1, collection: ["client", "indisponible", "disponible"]%>
    </div>
    <div class="col-sm-6 col-xs-12">
      <%= f.input :statut2, collection: [ 'A commander',
      'Config usine à valider',
      'En commande',
      'Annulé',
      'En Stock SE35',
      'Stock VO',
      'En stock VTFL',
      'Démo SE35',
      'Démo FR05',
      'Facturé VN',
      'Facturé VTFL',
      'VO à rentrer',
      'Facturé VO',
      'Facturé VO (ex Demo)'] %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= f.input :description_id, collection: @descriptions %>
    </div>
    <div class="col-sm-6 col-xs-12">
      <%= f.input :type_id, collection: @types%>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= f.input :ch_cb, collection: ["CB","CH"], as: :radio_buttons %>
    </div>
    <div class="col-sm-6 col-xs-12">
      <%= f.input :sept_neuf, collection: ["7","9"], as: :radio_buttons %>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Creer ce véhicule</button>
  <% end %>
</div>
  <% end %>
