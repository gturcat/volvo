        </tr>
      </thead>
      <tbody>
        <% if !@bus.immatriculation.present? %>
        <tr>
          <td>Attestation Amenagement</td>
          <td>
            <%if @delivery.documents.where(:name => "Attestaion Amenagement").take.present?  %>
