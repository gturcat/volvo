            <%= link_to new_document_path(:name => 'Attestaion Amenagement'), class:"btn btn-warning" do %><i class="far fa-edit"></i><% end %>
            <% else %>
            <%=link_to new_document_path(:name => 'Attestaion Amenagement'), class:"btn btn-primary" do %><i class="fas fa-plus-circle"></i><% end %>
            <% end %>
