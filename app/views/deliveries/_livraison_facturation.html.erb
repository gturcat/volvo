<div class="tab">
  <div class="panel panel-default">
    <!-- Default panel contents
    <div class="panel-heading">Bus en stock</div>-->
    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Montant</th>
          <th>Entitée</th>
          <th>Durée Buy Back</th>
          <th>% Buy Back</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= simple_form_for @delivery do |f| %>
        <tr>
          <td><%= f.input :date_facturation, as: :date, html5: true, label: false %></td>
          <td><%= f.input :montant, label: false %></td>
          <td><%= f.input :entitee, label: false %></td>
          <td><%= f.input :duree_buy_back, label: false %></td>
          <td><%= f.input :pourcentage_buy_back, label: false %></td>
          <td><button type="submit" class="btn btn-primary">
          <i class="far fa-save"></i></td>
        </tr>
      </tbody>
    </table>
    </button>
    <% end %>
  </div>
</div>

<div class="tab">
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"></div>
    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th>Documents</th>
          <th>Download</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><% if @delivery.Facture.attached? %>
            <%= link_to pdfjs.full_path(file:"#{url_for(@delivery.Facture)}"), target: "_blank" do %>
            <%= @delivery.Facture.name %>
            <% end %>
            <%= link_to rails_blob_path(@delivery.Facture, disposition: 'attachment') do%>
            <i class="far fa-save"></i>
            <% end %>
            <% else %>
            <%= @delivery.Facture.name %>
            <% end %>
          </td>
          <td><%= simple_form_for @delivery do |form| %>
            <%= form.file_field :Facture %>
            <button type="submit" class="btn btn-primary">
            <i class="far fa-save"></i>
            </button>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
