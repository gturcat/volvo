<div id="ferries">
  <% if @bus.ferries.blank? %>
    <% raise %>
  <% else %>
  <div class="tab">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"></div>
      <!-- Table -->
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Départ</th>
            <th>Arrivée</th>
            <th>Sites prevenus</th>
            <th>N°bdc pour le convoyage crée</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @bus.ferries.each  do | ferry| %>
        <tbody>
          <%= render 'ferries/show', ferry: ferry %>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
