     <div class="tab">
          <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Liste des véhicules en stock correspondant à la recherche</div>
            <!-- Table -->
            <table class="table">
              <thead>
                <tr>
                  <th>Marque</th>
                  <th>type</th>
                  <th>Long. </th>
                  <th>Places</th>
                  <th>V.C.L</th>
                  <th>N° Chassis</th>
                  <th>Statut 1</th>
                  <th>Statut 2</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @buses.each  do | bus| %>
                <tr>
                  <td><%= bus.marque  %></td>
                  <td><%= bus.type.name if bus.type.present? %></td>
                  <td><%= bus.longueur  %></td>
                  <td><%= bus.nbr_places %></td>
                  <td><%= bus.volo_coach_line %></td>
                  <td><%= bus.numero_chassis %></td>
                  <td><%= bus.statut1 %></td>
                  <td><%= bus.statut2 %></td>
                  <td><%= link_to new_order_bus_line_path(@order, bus), class: "btn btn-warning" do %>
                    <i class="fas fa-cart-plus"></i>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div>
          <%= link_to new_order_bus_path(@order), class: "btn btn-primary" do %>Commander un bus à l'usine
          <% end %>
        </div>

